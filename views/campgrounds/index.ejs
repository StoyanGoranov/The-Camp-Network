<%- include ("../partials/header"); %>

<div class="container">
	<header class="jumbotron">
		
		<h1>
			<img id="camp-icon" src="https://image.flaticon.com/icons/svg/2510/2510347.svg">
			Welcome to YelpCamp!
		</h1>
		<p>
			View our collection of campgrounds from all over the world
		</p>
		
		<div class="container">
			<form action="/campgrounds" method="GET" class="form-inline inline" id="search-form">
									<div class="form-group input-group-lg">
										<input type="text" name="search" placeholder="Campground search..." class="form-control">
										<input type="submit" value="Search" class="btn btn-lg btn-default">
									</div>
			</form>
			<p class="inline">
				<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
			</p>
		</div>
			
			
				
			
	</header>

	
	
	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<div class="col-md-12">
			<% if (noMatch !== undefined){ %>
				<h3>
					<%= noMatch %>
				</h3>
			<% } %>
		</div>
		<% campgrounds.forEach(function(campground){ %>
			 <div class="col-md-3 col-sm-6">
				 <div class="thumbnail" id="post">
					 <img src="<%= campground.image %>">
					 <div class="caption">
						 <h4> <%= campground.name  %> </h4>
						 <p>
							 <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
						 </p>
				 	 </div>
				 </div>
				 			
			</div>
		<% }); %>
	</div>
	
</div>

<%- include ("../partials/footer"); %>