
<%- include ("../partials/header"); %>

<div class="container mb-4">
	<div class="row justify-content-center">
		
		<div class="col-md-12 text-center mb-3">
			<h1 class="form-title">Create a New Campground</h1>
		</div>
		<div class="col-lg-4 col-md-6 col-sm-8 col-xs-12">
			<form action="/campgrounds" method="POST">
				<span class="tooltip-container"></span>
				<div class="form-group">
					<label for="name">Name: <span class="text-danger">*</span></label>
					<input id="name" class="form-control" type="text" name="campground[name]" placeholder="eg. Summerset beach" maxlength="50"  data-toggle="tooltip"  data-placement="top" data-trigger="manual" title="Campground name is a required field">
				</div>
				<div class="form-group">
					<label for="image">Image URL: <span class="text-danger">*</span></label>
					<input id="image" class= "form-control" type="text" name="campground[image]" placeholder="Paste an image URL here"  data-toggle="tooltip"  data-placement="bottom" data-trigger="manual" title="Image URL is a required field">
				</div>
				<div class="form-group">
					 <label for="cost">Price:</label>
					<input class="form-control" type="number" name="campground[price]" placeholder="Leave blank if staying overnight is free" step="0.10">
				</div>
				<div class="form-group mb-0">
					<label for="description">Description: <span class="text-danger">*</span></label>
					<textarea id="description" class= "form-control" type="text" maxlength="5000" name="campground[description]" placeholder="Describe your experience" rows="6" data-toggle="tooltip"  data-placement="bottom" data-trigger="manual" title="Description is a required field"></textarea>
				</div>
				<!-- <div class="form-group">
					<label for="location">Location Name</label>
					<input class="form-control" type="text" name="campground[location]" placeholder="This will appear on the map">
					<label for="longitude">Longitude</label>
					<input class="form-control" type="number" name="campground[lng]" placeholder="eg. -23.1231" step="0.000001">
					<label for="latitude">Latitude</label>
					<input class="form-control" type="number" name="campground[lat]" placeholder="eg. 123.9584" step="0.000001">
				</div> -->
				<div class="mt-1 mb-3 smalltext">
						Required fields <span class="text-danger">*</span>
				</div>
				<div  class="form-group">
					<button id="post" class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
				
				
				
			</form>

			<a class="btn btn-outline-danger btn-block" href="/campgrounds">Cancel</a>
		</div>
	</div>
</div>



<script src="/scripts/campgroundVerify.js"></script>
<%- include ("../partials/footer"); %>