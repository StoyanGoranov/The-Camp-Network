<%- include ("../partials/header"); %>

<div class="container">
	<div class="row ">
		<h1 class="form-title">Create a New Campground</h1>
		<div class="form-container">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<label for="name">Name</label>
					<input class="form-control" type="text" name="campground[name]" placeholder="eg. Summerset beach">
				</div>
				<div class="form-group">
					 <label for="image">Image Url</label>
					<input class= "form-control" type="text" name="campground[image]" placeholder="Paste an image URL here">
				</div>
				<div class="form-group">
					 <label for="cost">Price</label>
					<input class="form-control" type="number" name="campground[price]" placeholder="Leave blank if staying overnight is free" step="0.10">
				</div>
				<div class="form-group">
					<label for="description">Description</label>
					<input class= "form-control" type="text" name="campground[description]" placeholder="Describe your experience">
				</div>
				<!-- <div class="form-group">
					<label for="location">Location Name</label>
					<input class="form-control" type="text" name="campground[location]" placeholder="This will appear on the map">
					<label for="longitude">Longitude</label>
					<input class="form-control" type="number" name="campground[lng]" placeholder="eg. -23.1231" step="0.000001">
					<label for="latitude">Latitude</label>
					<input class="form-control" type="number" name="campground[lat]" placeholder="eg. 123.9584" step="0.000001">
				</div> -->
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
				
				
				
			</form>

			<a class="btn btn-danger btn-block" href="/campgrounds">Cancel</a>
		</div>
	</div>
</div>




