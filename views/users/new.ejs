<%- include ("../partials/header") %>


<div class="container mb-4">
	<div class="row justify-content-center">
		<div class="col-md-12 text-center mb-4">
			<h1 class="form-title">Sign up</h1>
		</div>
		
		<div class="col-lg-4 col-md-6 col-sm-8 col-xs-12 mb-4">
			
			<form action="/users/new" method="POST">
				<span class="tooltip-container"></span>
				<div class="form-group">
					<label for="username">Username</label>
					<input id="username" class="form-control" type="text" name="username" placeholder="username"  data-toggle="tooltip"  data-placement="bottom" data-trigger="manual" title="Username cannot be empty">
				</div>
				<div class="form-group">
					<label for="password">Password</label>
					<input id="password" class="form-control"  type="password" name="password" placeholder="password" data-toggle="tooltip"  data-placement="bottom" data-trigger="manual" title="Password cannot be empty" >
				</div>
				<input id="lastPage" type="hidden" name="lastPage">
				<div class="form-group">
					<button type="submit" id="post" class="btn btn-primary btn-block">
						Sign up
					</button>
				</div>
			</form>
			<a class="btn btn-outline-danger btn-block " href="/campgrounds">Cancel</a>	
			
		</div>
	</div>
</div>

<script src="../scripts/signUpVerify.js"></script>
<%- include ("../partials/footer") %>