<%- include ("../partials/header") %>


<div class=container>
	<div class="row justify-content-center">
		
		<div class="col-md-12 text-center">
			<h1 class="form-title">Update Profile</h1>
		</div>
		<div class="col-lg-4 col-md-6 col-sm-8 col-xs-12 mb-3">
			
			<form action="/users/<%= user._id %>?_method=PUT" method="POST">
				<span class="tooltip-container"></span>
				<div class="form-group">
					<label for="avatar">Profile Picture</label>
					<input id="avatar" class="form-control" type="text" name="user[avatar]" value="<%= user.avatar %>" placeholder="your picture url here" data-toggle="tooltip"  data-placement="top" data-trigger="manual" title="">
				</div>
				<div class="form-group">
					<label for="firstname">First Name</label>
					<input id="firstname" class="form-control" type="text" name="user[firstname]" maxlength="35" value="<%= user.firstName %>" placeholder="first name" data-toggle="tooltip"  data-placement="top" data-trigger="manual" title="" >
				</div>
				<div class="form-group"> 
					<label for="lastname">Last Name</label>
					<input id="lastname" class="form-control" type="text" name="user[lastname]" maxlength="35" value="<%= user.lastName %>" placeholder="last name" data-toggle="tooltip"  data-placement="top" data-trigger="manual" title="">
				</div>
				<div class="form-group">
					<label for="about">About you</label>
					<textarea id="about" class="form-control" type="text" name="user[about]" maxlength="800"  placeholder="introduce yourself" rows="6" data-toggle="tooltip"  data-placement="top" data-trigger="manual" title=""><%= user.about %></textarea>
				</div>
				<div class="form-group">
					<label for="email">E-mail</label>
					<input id="email" class="form-control" type="text" name="user[email]" value="<%= user.email %>" placeholder="john@smith.com" data-toggle="tooltip"  data-placement="top" data-trigger="manual" title="">
				</div>
				<% if(!user.isAdmin){ %>
				<div class="form-group hidden">
					<label for="admin">Become An Admin</label>
					<input id="admin" class="form-control" type="text" name="user[admin]" maxlength="35" placeholder="admin code" data-toggle="tooltip"  data-placement="bottom" data-trigger="manual" title="">
				</div>
				<% } %>
				<div class="form-group">
					<button id="post" class="btn btn-primary btn-block">
						Update profile
					</button>
				</div>
			</form>
			<a class="btn btn-outline-danger btn-block " href="/users/<%= user._id %>">Cancel</a>	
			
		</div>
	</div>
</div>

